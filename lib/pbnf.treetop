grammar PseudoBNF
	rule grama
		line* {
			def content
				elements.map{ |e| e.content}
			end
		}
	end

	rule line
		name ":" sep rulo opt* ";" sep
		{
			def content
				[text_value]
			end
		}
	end

	rule opt 
		sep "|" sep rulo
	end

	rule rulo
		prob (sep name mod symbol)+
	end

	rule mod
		[*+]*
	end

	rule name
		[a-zA-Z0-9]+
	end

	rule symbol
		[ !?,]*
	end

	rule prob
		[0] "." [0-9]+  / "1.0" / "1" / "0"
	end
	
	rule sep
		[ \n]*
	end
end
