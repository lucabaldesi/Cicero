<%= render 'header' %>

<%= form_tag( url_for(controller: "speeches", action: "create"), method: "post") do %>
	<p>
	<%= label_tag(:name, "Name") %><br>
	<%= text_field_tag(:name, @grammar_name) %>
	</p>
	<p>
	<%= label_tag(:grammar, "Grammar:") %><br>
	<%= text_area_tag(:grammar, @grammar) %>
	</p>

	<p>
	<%= submit_tag("Try it!", name: "trial") %>
	<%= submit_tag("Post it!", name: "save") %>
	</p>
<% end %>

